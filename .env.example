# Crypto Trading Bot Environment Variables
# Copy this file to .env and fill in your values

# Binance.US API credentials
# Get your API keys from: https://www.binance.us/en/usercenter/settings/api-management
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# Use testnet for testing (recommended for paper trading)
USE_TESTNET=true

# Trading configuration
INITIAL_CAPITAL=2000

# Logging
LOG_LEVEL=info
RUST_LOG=crypto_trading_bot=info

# Data directory
DATA_DIR=./data
